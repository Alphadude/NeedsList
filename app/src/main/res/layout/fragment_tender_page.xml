                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/location2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_marginRight="6dp"
                        android:text="Port Harcourt, Nigeria" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_access_alarm"/>

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:text="10days ago" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/tender2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="0dp"
                        android:background="@color/color_main"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/viewmap2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_main"
                        android:src="@drawable/ic_map"/>

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/showdistance2"
                        android:layout_weight="1"
                        android:background="@color/color_main"
                        android:src="@drawable/ic_directions_walk"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>